[user]
	email = EMAIL
	name = NAME
	signingkey = KEY

[core]
	editor = vim

[commit]
	gpgsign = true

[advice]
	addIgnoredFile = false

[diff]
    tool = kitty
	guitool = kitty.gui

[difftool]
    prompt = false
    trustExitCode = true

[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE

